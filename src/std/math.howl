// Basic arithmetic functions
abs :: fn(x: f64) -> f64 {
    return if x < 0.0 { -x } else { x }
}

min :: fn(a: f64, b: f64) -> f64 {
    return if a < b { a } else { b }
}

max :: fn(a: f64, b: f64) -> f64 {
    return if a > b { a } else { b }
}

